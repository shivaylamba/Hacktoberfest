CORRECT = [
    "#output1",
    "#output2",
    "#output3",
]

INCORRECT = [
    "#output1",
    "#output2",
    "#output3",
]

correct_answer = CORRECT[num]
incorrect_answer = INCORRECT[num]

for question, right_answer in questions:
    answer = input(f"{question}")
    if answer.lower() == right_answer:
        score += 1
        print(correct_answer)
    else:
        print(incorrect_answer)

