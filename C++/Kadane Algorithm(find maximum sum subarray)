#include<bits/stdc++.h>
using namespace std;

int solve(int a[], int n){

  int currsum = INT_MIN;
  int maxsum = INT_MIN;

  for(int i = 0 ; i < n ; i++){
     currsum = max(a[i], currsum+a[i] );
     maxsum = max(maxsum ,currsum);}

    return maxsum;
}

int main(){
