int solve(int a[], int n){

  for(int i = 0 ; i < n ; i++){
     currsum = max(arr[i],currsum+arr[i]);
     maxsum = max(maxsum ,currsum);}

    return currsum;
}

int main(){
   int a[] = { -2, -3, 4, -1, -2, 1, 5, -3 };
    int n = sizeof(arr) / sizeof(a[0]);
 
    // Function Call
    int max_sum = solve(a, n);
