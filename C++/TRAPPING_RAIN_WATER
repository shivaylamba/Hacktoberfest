#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int n;
	cin>>n;
	int arr[n];
	for(int i=0;i<n;i++){
	    cin>>arr[i];
	}
	int left[n],right[n];
	left[0]=-1;
	for(int i=1;i<n;i++){
	    left[i]=max(left[i-1],arr[i-1]);
	}
	right[n-1]=-1;
	for(int i=n-2;i>=0;i--){
	    right[i]=max(right[i+1],arr[i+1]);
	}
	int ans=0;
	for(int i=0;i<n;i++){
	    if(left[i]!=-1 && right[i]!=-1 && min(left[i],right[i])>arr[i]){
	        ans+=min(left[i],right[i])-arr[i];
	    }
	}
	cout<<ans;
}
