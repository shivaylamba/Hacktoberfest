typedef long long lo;
typedef long double ld;
typedef pair<int, int> pii;
typedef pair<ll, ll> pll;

#define vi vector<long long int>
#define vvi vector<vector<long long int>>
#define rep(i, a, b) for (ll i = a; i <= b; i++)

template <class T>
using oset = tree<ll, null_type, less<ll>, rb_tree_tag, tree_order_statistics_node_update>;

const ll INF = 1e18;
const int MOD = 1e9 + 7;
const ld PI = acosl(-1.0);
const ld EPS = 1e-9;

bool isPrime(ll x)
{
    
    if (x == 1)
    {
        return false;
    }
    else if (x == 2 || x == 3)
    {
        return true;
    }
    else
    {   
        bool flag = true;
        for (ll i = 2; i * i <= x; ++i)
        {
            if (x % i == 0)
            {
                flag = false;
                break;
            }
        }
        return flag;
    }
}
void solve()
{
    ll x, k;
    cin >> x >> k;
    cout << 2*x << " " << (x*k)*(x*k-1) << endl;
}

signed main()
{
    fast;
#ifndef ONLINE_JUDGE
    cerr << endl
         << ' ' << 1.0 * clock() / CLOCKS_PER_SEC << endl;
#endif
    int T;
    cin >> T;
    while (T--)
    {
        solve();
    }
    return 0;
}
