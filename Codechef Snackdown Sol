    cerr << ' ' << H;
    dbg_out(T...);
}

#ifdef ONLINE_JUDGE
#define debug(...)
#else
#define debug(...) cerr << "(" << #__VA_ARGS__ << "):", dbg_out(__VA_ARGS__)
